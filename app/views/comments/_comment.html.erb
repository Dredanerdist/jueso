<tr id ="comment-<%= comment.id %>" class="comment">
	<td class="avatar">
		<% if comment.user.avatar.exists? then %>
			<%= link_to image_tag(comment.user.avatar.url(:medium)), comment.user %>
		<% else %>
			<%= link_to image_tag("/images/avatar-default.png", :size =>"100x100"), comment.user %>
		<% end %>		
		<span class="user">
	      <h4>
			<% if current_user?(comment.user) then %>
				<span class="myself">我自己</span>
			<% else %>
				<%= link_to comment.user.username, comment.user %>
			<% end %>	
		</h4>
		</span>
	</td>	
	<td>
		<%= comment.body %>
	</td>
	<td>

	</td>
</tr>