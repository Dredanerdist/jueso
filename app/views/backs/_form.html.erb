	<script type="text/javascript" charset="utf-8">	
	
		$( "div.slider" ).slider({
					value:10,
					min: 1,
					max: 20000,
					step: 1,
					slide: function( event, ui ) {
						$( "#amount" ).val(ui.value );
					}
				});
		$( "#amount" ).val($( "div.slider" ).slider( "value") );
			
	
	</script>
<% end %>
	
