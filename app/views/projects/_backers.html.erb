<table class="backs" summary="User microposts">

	<% @backs.each do |back| %>
	<tr id ="back-<%= back.id %>" class="back">
		<td class="avatar">
			<% if back.user.avatar.exists? then %>
				<%= link_to image_tag(back.user.avatar.url(:medium)), back.user %>
			<% else %>
				<%= link_to image_tag("/images/avatar-default.png", :size =>"100x100"), back.user %>
			<% end %>		
			<span class="user">
		      <h4>
				<% if current_user?(back.user) then %>
					<span class="myself">我自己</span>
				<% else %>
					<%= link_to back.user.username, back.user %>
				<% end %>	
			</h4>
			</span>
		</td>	
		<td>
		 <h3><%= back.amount %> ¥</h3>
			<%= back.comment %>
		</td>
		<td>
			<%= back.updated_at %>
		</td>
	</tr>
	<% end %>
</table>

